<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mancas.epoc" version="1.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>EPOCFY</name>
    <description>
        An application that helps users with COPD
    </description>
    <author email="epocfy@gmail.com" href="">
        EPOCFY Team
    </author>
    <content src="index.html" />
    <preference name="orientation" value="portrait" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <platform name="android">
        <!-- ICON -->
        <icon src="res/android/logo_mdpi.png" density="mdpi" />
        <icon src="res/android/logo_hdpi.png" density="hdpi" />
        <icon src="res/android/logo_xhdpi.png" density="xhdpi" />
        <icon src="res/android/logo_xxhdpi.png" density="xxhdpi" />
        <icon src="res/android/logo_xxxhdpi.png" density="xxxhdpi" />

        <!-- SPLASHSCREEN -->
        <splash src="res/screen/android/splash-port-hdpi.png" density="port-hdpi"/>
        <splash src="res/screen/android/splash-port-ldpi.png" density="port-ldpi"/>
        <splash src="res/screen/android/splash-port-mdpi.png" density="port-mdpi"/>
        <splash src="res/screen/android/splash-port-xhdpi.png" density="port-xhdpi"/>
        <splash src="res/screen/android/splash-port-xxhdpi.png" density="port-xxhdpi"/>
        <splash src="res/screen/android/splash-port-xxxhdpi.png" density="port-xxxhdpi"/>
    </platform>

    <preference name="SplashScreenDelay" value="4000" />
    <preference name="FadeSplashScreen" value="false"/>
    <preference name="ShowSplashScreenSpinner" value="false"/>
</widget>
